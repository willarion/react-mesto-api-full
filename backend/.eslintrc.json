{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "root": true,
    "extends": [
       "airbnb-base"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12
    },
    "rules": {
      "no-underscore-dangle": ["error", { "allow": ["_id"] }],
      "no-shadow": ["error", { "allow": ["never", "user", "email", "name", "about", "avatar"] }],
      "max-classes-per-file": ["error", 5],
      "no-unused-vars": ["error", { "argsIgnorePattern": ["next", "res", "req"] }]
    }
}
